<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.guardianproject.otr.sample.securegallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="info.guardianproject.otr.app.im.permission.IM_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/secure_gallery_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.guardianproject.otr.sample.securegallery.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- DISCOVER -->
        <activity android:name=".DiscoverActivity" >
            <intent-filter>
                <action android:name="info.guardianproject.otr.app.im.dataplug.DISCOVER" />
                <action android:name="info.guardianproject.otr.app.im.dataplug.ACTIVATE" />
                <action android:name="info.guardianproject.otr.app.im.dataplug.RESPONSE" />
                <action android:name="info.guardianproject.otr.app.im.dataplug.REQUEST_TO_LOCAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
